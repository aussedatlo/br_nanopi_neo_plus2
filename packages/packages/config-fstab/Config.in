config BR2_PACKAGE_CONFIG_FSTAB_DEVICE
	string "device"
	default "/dev/sda1"
	depends on BR2_PACKAGE_CONFIG_FSTAB
	help
	  Device in /dev to mount.

config BR2_PACKAGE_CONFIG_FSTAB_MOUNT_POINT
	string "path"
